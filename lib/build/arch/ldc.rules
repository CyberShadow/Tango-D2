# common make rules for native static compilation with ldc

LIB_EXT=a
OBJ_EXT=o
LIB_DIR="-L=-L"
LIB_LINK="-L=-l"
OUT_NAME="-of="
mkLib=ar -r
ranlib=ranlib

DFLAGS_ALL=$(DFLAGS_MAIN) $(DFLAGS_COMP) $(DFLAGS_ADD)
CFLAGS_ALL=$(CFLAGS) $(CFLAGS_MAIN) $(CFLAGS_COMP) $(CFLAGS_ADD)

EXCLUDE_DEP_COMP= ^ldc\.

%.dep:%.d
	$(DC) -c -v $(DFLAGS_ALL) -of=$(<:%.d=%.o) $< | $(TOOLDIR)/toMakeDeps.sh --target $(<:%.d=%.o) $(EXCLUDE_DEP_ALL) > $(<:%.d=%.dep)
	[ -r "$(<:%.d=%.o)" ]

%.o:%.d
	$(DC) -c -v $(DFLAGS_ALL) -of=$(<:%.d=%.o) $< | $(TOOLDIR)/toMakeDeps.sh --target $(<:%.d=%.o) $(EXCLUDE_DEP_ALL) > $(<:%.d=%.dep)
	[ -r "$(<:%.d=%.o)" ]

LCC=llc

%.o:%.s
	$(CC) -c $(CFLAGS_ALL) $< -o$@

%.o:%.S
	$(CC) -c $(CFLAGS_ALL) $< -o$@

%.o:%.c
	$(CC) -c $(CFLAGS_ALL) $< -o$@

%.bc:%.ll
	$(LLC) -f -o=$@ $<
